@model AgricultureHat.Models.Farmer

@{
    ViewBag.Title = "Register";
}

<link href="~/Content/Login.css" rel="stylesheet" />
<div class="register">
    <p class="lbl-login" style="color: #e8a998d9;">Register</p>
    @if (ViewBag.Error != null)
    {
        <p class="cerror" id="error">@ViewBag.Error</p>
    }
    <form style="padding: 2em 5em 5em; margin-left: 5em;" id="register" action="~/Authentication/Register" method="POST" enctype="multipart/form-data">
        <table>
            <tr>
                <td>
                    <label class="lbl-reg" for="Name">Farmer Name</label>
                </td>
                <td>
                    <input class="user-name" type="text" name="Name" id="Name" placeholder="Farmer Name" required />
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="Village">Village</label></td>
                <td>
                    <input class="user-name" type="text" name="Village" id="Village" placeholder="Village" required/>
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="ward">Ward No</label></td>
                <td>
                    <input class="user-name" type="number" name="WardNo" id="ward" placeholder="Ward No" required />
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="District">District</label></td>
                <td>
                    <input class="user-name" type="text" name="District" id="District" placeholder="District" required/>
                </td>
            </tr>
            
            <tr>
                <td><label class="lbl-reg" for="Age">Age</label></td>
                <td>
                    <input class="user-name" type="text" name="Age" id="Age" placeholder="Age" required />
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="phone">Phone</label></td>
                <td>
                    <input class="user-name" type="text" name="Phone" id="phone" placeholder="Phone No" required />
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="Nid">NID</label></td>
                <td>
                    <input class="user-name" type="number" name="Nid" id="Nid" placeholder="NID No" required/>
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="Image">Image</label></td>
                <td>
                    <input class="user-name" style="padding: 5px;" type="file" name="Image" id="Image" required />
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="email" >Email</label></td>
                <td>
                    <input class="user-name" type="text" name="Email" id="email" placeholder="Email Id" required />
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="password">Password</label></td>
                <td>
                    <input class="user-name" type="password" name="Password" id="password" placeholder="Password" required />
                </td>
            </tr>
            <tr>
                <td><label class="lbl-reg" for="cpassword" >Confirm Password</label></td>
                <td>
                    <input class="user-name" type="password" name="cpassword" id="cpassword" placeholder="Confirm Password" required />
                </td>
            </tr>
            
            <tr>
                <td></td>
                <td><input class="btn animate-btn" style="background-color: #1ab74f85; width: 100%; margin: 10px 0; font-weight: 700;" type="submit" value="REGISTER"/></td>
            </tr>

        </table>
    </form>

</div>
@section scripts
{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>

        $(document).ready(function () {
            setTimeout(function () {
                $("#warningLabel").hide(1000).empty();
            }, 5000);


            $("#register").validate({
                rules: {
                    Name: "required",
                    Email: {
                        required: true,
                        email: true
                    },
                    Village: {
                        required: true
                        
                    },
                    District: {
                        required: true
                    },
                    WordNo: {
                        required: true

                    },
                    Password: {
                        required: true,
                        minlength:5
                    },
                    cpassword: {
                        minlength: 5,
                        equalTo : "#password"
                    },
                    Phone: {
                        required: true,
                        number: true
                    },
                    Age: {
                        required: true,
                        number: true
                    },
                    Nid: {
                        required: true,
                        number: true
                    },
                    Image: {
                        required: true,
                    }
                    


                },
                messages: {
                    Name: "Please Enter Farmer Name",
                    Email: {
                        required: "Please Enter Farmer Email id",
                        email: "Email id not correct"
                    },
                    Password: {
                        required: "Please Enter Your Password",
                        minlength: "Minimum length is 5"
                    },
                    cpassword: {
                        minlength: "Minimum length is 5",
                        equalTo: "Password not matched"
                    },
                    Village: {
                        required: "Please Enter Farmer Name"

                    },
                    District: {
                        required: "Please Enter Farmer Name"
                    },
                    WordNo: {
                        required: "Please Enter Farmer Name"

                    },
                    Phone: {
                        required: "Please Enter Farmer Phone No",
                        number: "Number should not contain cahracter"
                    },
                    Age: {
                        required: "Please Enter Farmer Age",
                        number: "Number should not contain cahracter"
                    },
                    Nid: {
                        required: "Please Enter Farmer NID",
                        number: "Number should not contain cahracter"
                    },
                    Image: {
                        required: "Please Select Farmer Photo"
                    },
                    

                }
            });
        });

    </script>

}